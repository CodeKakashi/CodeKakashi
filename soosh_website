    <!-- Script Logic -->
    <script>
        // --- Tab Navigation Logic ---
        function switchTab(tabId) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(el => {
                el.classList.add('hidden');
                el.classList.remove('block');
            });
            
            // Show selected tab
            const target = document.getElementById(tabId);
            if(target) {
                target.classList.remove('hidden');
                target.classList.add('block');
            }

            // Update nav buttons
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active', 'border-b-3', 'border-teal-600', 'text-teal-600');
                if(btn.dataset.tab === tabId) {
                    btn.classList.add('active');
                }
            });
        }

        // Event Listeners for tabs
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', () => switchTab(btn.dataset.tab));
        });

        // --- Accessibility Toggle Logic ---
        const accessBtn = document.getElementById('access-toggle');
        const accessText = document.getElementById('access-text');
        const body = document.body;

        accessBtn.addEventListener('click', () => {
            const isAccessible = body.classList.toggle('accessible-mode');
            accessBtn.setAttribute('aria-pressed', isAccessible);
            
            if (isAccessible) {
                accessText.textContent = "Disable Focus Mode";
                accessBtn.classList.add('bg-teal-100', 'text-teal-800');
                accessBtn.classList.remove('bg-slate-100');
            } else {
                accessText.textContent = "Enable Focus Mode";
                accessBtn.classList.remove('bg-teal-100', 'text-teal-800');
                accessBtn.classList.add('bg-slate-100');
            }
        });

        // --- AI Simulator Logic ---
        function updatePromptSimulation() {
            const style = window.currentPromptStyle || 'blunt';
            const readingLevel = document.getElementById('readingLevel').value;
            const container = document.getElementById('bot-message');

            let message = "";

            if (style === 'blunt') {
                container.className = "bg-white border border-slate-200 text-slate-800 px-4 py-3 rounded-t-lg rounded-br-lg max-w-[90%] text-sm shadow-sm";
                message = "<strong>System Error 404:</strong> The file upload failed. The format is incorrect or the server is busy. Please try again later. Check your file extension.";
            } else {
                // Trauma Informed + Reading Level Logic
                container.className = "bg-teal-50 border border-teal-200 text-teal-900 px-4 py-3 rounded-t-lg rounded-br-lg max-w-[90%] text-sm shadow-sm";
                
                if (readingLevel === 'complex') {
                    message = "I apologize for the inconvenience. We encountered an issue processing your document. Please verify it is a PDF and attempt the upload again.";
                } else {
                    // Age 9-10 (Year 5) target
                    message = "Don't worry, you didn't do anything wrong. <br><br>We couldn't read that file. Could you try checking if it is a <strong>PDF</strong> file?<br><br>If you are stuck, you can click 'Help' anytime.";
                }
            }
            container.innerHTML = message;
        }

        function setPromptStyle(style) {
            window.currentPromptStyle = style;
            updatePromptSimulation();
        }

        document.getElementById('readingLevel').addEventListener('change', updatePromptSimulation);
        
        // Initialize AI Sim
        setPromptStyle('trauma');


        // --- Chart.js Implementations ---
        let rageChart, latencyChart;

        function initCharts() {
            const rageCtx = document.getElementById('rageClickChart').getContext('2d');
            const latencyCtx = document.getElementById('latencyChart').getContext('2d');

            Chart.defaults.font.family = "'Inter', sans-serif";
            Chart.defaults.color = '#64748b';

            // Rage Click Chart (Bar)
            rageChart = new Chart(rageCtx, {
                type: 'bar',
                data: {
                    labels: ['Log In', 'Upload CV', 'Search', 'Profile', 'Settings'],
                    datasets: [{
                        label: 'Avg Clicks per Action (Normal)',
                        data: [1.2, 2.1, 1.5, 1.1, 1.0],
                        backgroundColor: '#cbd5e1',
                        borderRadius: 4
                    }, {
                        label: 'Detected Rage Clicks (Threshold >3)',
                        data: [0, 4.5, 0, 0, 0], // Spike at Upload
                        backgroundColor: '#f87171',
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true, title: { display: true, text: 'Clicks' } }
                    },
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y > 3 ? '‚ö†Ô∏è ALERT: User Frustration Detected' : 'Normal Interaction';
                                }
                            }
                        }
                    }
                }
            });

            // Latency Chart (Line)
            latencyChart = new Chart(latencyCtx, {
                type: 'line',
                data: {
                    labels: ['0s', '10s', '20s', '30s', '40s', '50s', '60s'],
                    datasets: [{
                        label: 'Healthy Interaction',
                        data: [100, 80, 40, 10, 5, 2, 0],
                        borderColor: '#0d9488',
                        tension: 0.4,
                        fill: false
                    },
                    {
                        label: 'Cognitive Overload Pattern',
                        data: [100, 95, 90, 85, 80, 75, 70], // Flat line indicates freezing
                        borderColor: '#f59e0b',
                        borderDash: [5, 5],
                        tension: 0.4,
                        fill: false
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { title: { display: true, text: '% Users Active' } },
                        x: { title: { display: true, text: 'Time on Screen' } }
                    },
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        function updateChartData() {
            // Simulate random variations in the rage click chart
            const newData = [0, 2 + Math.random() * 4, 0, Math.random() * 2, 0];
            rageChart.data.datasets[1].data = newData;
            rageChart.update();
        }

        // Initialize charts when DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            initCharts();
            // Default to dashboard
            switchTab('dashboard');
        });

    </script>
</body>
</html>